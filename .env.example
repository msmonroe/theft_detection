# Azure AI Vision Configuration
# Copy this file to .env and fill in your actual values

# Azure Computer Vision Endpoint
# Get this from Azure Portal -> Your Computer Vision Resource -> Keys and Endpoint
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Azure Computer Vision Key
# Get this from Azure Portal -> Your Computer Vision Resource -> Keys and Endpoint
AZURE_VISION_KEY=your-32-character-key-here

# Demo Mode (set to true to run without Azure credentials)
# When true, uses mock data instead of calling Azure API
DEMO_MODE=false

# Logging Configuration
ENABLE_LOGGING=true
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIRECTORY=./logs

# Performance Monitoring
ENABLE_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true

# Optional: Azure Application Insights
# ENABLE_AZURE_INSIGHTS=false
# AZURE_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here
